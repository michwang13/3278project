<%- include("header") -%>

  <div class="wrapper">

    <!-- Sidebar  -->
    <nav id="sidebar">
      <div class="sidebar-header">
        <img src="/images/azbank_logo.png" alt="">
        <div>
          <h3>AZ Bank</h3>
        </div>
      </div>

      <div class="dashboard-element-container">
        <div class="sidebar-top">
          <ul class="list-unstyled components">
            <li class="active">
              <a href="#">Dashboard</a> <!-- ejs, js -->
            </li>
            <li>
              <a href="../transactions/<%= username %>">Transactions</a> <!-- ejs, js -->
            </li>
            <li>
              <a href="../profile/<%= username %>">Profile</a> <!-- ejs, js -->
            </li>
          </ul>
        </div>

        <div class="sidebar-bottom">
          <ul class="list-unstyled CTAs">
            <li class="li-logout">
              <a href="../" class="download">Logout</a>
            </li>
          </ul>
          <p>Last Login: <%= lastLogin %>
          </p>
        </div>
      </div>
    </nav>



    <!-- Page Content  -->
    <div id="content">

      <section class="header">
        <button type="button" id="sidebarCollapse" class="btn btn-secondary">
          <i class="fas fa-bars"></i>
        </button>
        <h2>Transactions</h2>
        <button type="button" class="btn btn-secondary btn-md download-button"> <i
            class="transfer-icon fas fa-exchange-alt"></i><a href="../pay/<%=username%>">Pay</a></button></button>
      </section>
      <hr>
      <section class="main">

        <section class="filter-section">
          <div class="filter">
            <label for="start">Date</label>
            <input type="date" id="filter-date" name="filter-date" min="2018-01-01" max="2021-12-31">
          </div>
          <div class="filter-time">
            <p>Time</p>
            <div class="input-time-container">
              <input type="radio" id="filter-am" name="am">
              <label for="html">AM</label>
              <input type="radio" id="filter-pm" name="filter-pm">
              <label for="html">PM</label>
            </div>
          </div>
          <div class="filter">
            <p>Amount</p>
            <div class="input-amount-container">
              <input type="range" min="1" max="100" value="50" class="slider" id="filter-amount">
              <p class="filter-amount-display">10,000</p> <!-- pake javascript + ejs -->
            </div>
          </div>


        </section>

        <!-- ejs -->
        <div class="transactions-section">
          <h6><u>All Transactions</u></h6>
          <% for (var transaction of transactions){ %>
            <div class="transactions-container">
              <div class="transaction">
                <div class="transaction-name-date-container">
                  <p class="transaction-name">
                    <%=transaction.transaction_id%>
                  </p>
                  <p class="transaction-date">
                    <%=transaction.time%>
                  </p>
                </div>
                <div class="transaction-amount-container">
                  <p class="transaction-amount">
                    <%=transaction.amount%>
                  </p>
                </div>
              </div>
            </div>
            <%}%>
        </div>
